{
  "type": "module",
  "name": "haker_news_js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "stylelint": "stylelint \"**/*.css\"",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
    "prettier": "prettier \"**/*.{svg,js,html,css,json}\" --write --cache node_modules/.cache/prettier",
    "exec": "node index.js",
    "server": "http-server",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1982irushka/Haker_News_JS.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/1982irushka/Haker_News_JS/issues"
  },
  "homepage": "https://github.com/1982irushka/Haker_News_JS#readme",
  "lint-staged": {
    "*.{js,html}": [
      "npm run lint -- --fix",
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-standard": "^26.0.0"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  }
}
